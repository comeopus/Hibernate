<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.whut.hibernate.module.Student" table="student">
        <id name="id" column="id" type="string">
            <generator class="uuid"/>
        </id>
        <property name="name"  column="name" type="string"/>
        <property name="cardId"  column="cardId" type="string"/>
        <property name="age"  column="age" type="int"/>
         <!--多对多有一个中间表要体现出来   cascade不能设置为all -->
        <set name="courses" table="student_course" cascade="save-update">
            <key column="student_id"></key>     <!--这个id是指对方的外键-->
            <many-to-many class="org.whut.hibernate.module.Course" column="course_id"></many-to-many>
        </set>

        <many-to-one name="team" class="org.whut.hibernate.module.Team" column="team_id" cascade="all" fetch="select"/>
    </class>

</hibernate-mapping>